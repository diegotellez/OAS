@model IEnumerable<Entidades.Estado>

@{
    ViewBag.Title = "Estados";
}

<h2>Estados</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreEstado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreEstado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdEstado }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.IdEstado })
        </td>
    </tr>
}

</table>
